CC=gcc
CFLAGS= -g -O0 -fopenmp
LDFLAGS= -g -fopenmp
SOURCES_PROGRAM=main.c
SOURCES_GENERATOR=graph_ge.c
OBJECTS_GENERATOR=$(SOURCES_GENERATOR:.c=.o)
OBJECTS_PROGRAM=$(SOURCES_PROGRAM:.c=.o)
EXECUTABLE_PROGRAM=program
EXECUTABLE_GENERATOR=generator



all: $(EXECUTABLE_GENERATOR) $(EXECUTABLE_PROGRAM)

program: $(SOURCES_PROGRAM) $(EXECUTABLE_PROGRAM)

generator: $(SOURCES_GENERATOR) $(EXECUTABLE_GENERATOR)

#install:
#	@cp $(EXECUTABLE) $(OUTDIR)
    
$(EXECUTABLE_GENERATOR): $(OBJECTS_GENERATOR) 
	@$(CC) $(LDFLAGS) $(OBJECTS_GENERATOR) -o $@

$(EXECUTABLE_PROGRAM): $(OBJECTS_PROGRAM) 
	@$(CC) $(LDFLAGS) $(OBJECTS_PROGRAM) -o $@

.cpp.o:
	@$(CC) $(CFLAGS) $< -o $@

clean:
	@rm -f *.o

clobber:
	@rm -f *.o $(EXECUTABLE)
